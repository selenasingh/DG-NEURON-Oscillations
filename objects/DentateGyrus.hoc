                    vmc2bc.x[npost] += 1
                } else { 
                    j -= 1	 
                } 
            }


            // MC -> MC
            for j=0, 2 {
                Gauz3 = rdmc2mc1.repick()		//[-3:3]
                if (i+Gauz3 > 14) {npost = i+Gauz3-15 }
                if (i+Gauz3 < 0) {npost = i+Gauz3+15} 
                if ((i+Gauz3 >-1) && (i+Gauz3 < 15)) {npost = i+Gauz3}
